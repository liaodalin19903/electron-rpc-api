{
  "extends": "./tsconfig.checks.json",
  "compilerOptions": {
    /*
    resolving & capabilities
    */
    "esModuleInterop": true,
    /*
    emitting
    */
    "target": "es6",
    "module": "commonjs",
    "importHelpers": true,
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true,
    /*
    paths
    */
    "lib": [
      "dom",
      "es6"
    ],
    "baseUrl": ".",
    "outDir": "./lib"
  }
}
